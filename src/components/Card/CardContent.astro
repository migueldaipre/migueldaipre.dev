---
interface Props {
	title?: string
	body?: string
}

const { title, body } = Astro.props
---

<div class="flex flex-col gap-4">
  {title && <h2 class="text-primary-100 text-xl font-bold m-0 z-2">{title}</h2>}
  {body && <p class="text-primary-200 m-0 font-light text-base">{body}</p>}
  <slot />
</div>