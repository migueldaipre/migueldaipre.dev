---
import MainLayout from '@layouts/MainLayout.astro'
import PostCard from '@components/PostCard/PostCard.astro'

import { posts } from '@data/posts';
---

<MainLayout>
  <main class="flex flex-col">
    <h1 class="text-2xl text-gray-100">Posts</h1>

    <article class="flex flex-col">
      <section class="flex flex-col w-full">
        {posts.length > 0 ? (
          <div class="flex flex-col gap-6 mt-6 md:flex-row md:flex-wrap">
            {posts.map((post) => (
              <div class="w-full">
                <PostCard
                  slug={post.slug}
                  title={post.title}
                  description={post.description}
                  publishedAt={post.publishedAt}
                />
              </div>
            ))}
          </div>
        ) : (
          <div class="gap-6 mt-6">
            <p class="text-primary-200 m-0 font-light text-base">Soon, stay connected ðŸ‘€</p>
          </div>
        )}
      </section>
    </article>
  </main>
</MainLayout>